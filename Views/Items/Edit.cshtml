@using HRMS.Data.Enums;
@using HRMS.Models;
@model Item

@{
    ViewData["Title"] = "Update item";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Update @Model.Name</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ItemAvailable" class="control-label"></label>
                        <select asp-for="ItemAvailable" class="form-control" asp-items="Html.GetEnumSelectList<ItemAvailable>()"></select>
                        <span asp-validation-for="ItemAvailable" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <a class="btn btn-danger text-white float-right" asp-action="Delete" asp-route-id="@Model.Id"><i class="bi bi-trash"></i>Delete </a>
                        <input type="submit" value="Update" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })

        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}

